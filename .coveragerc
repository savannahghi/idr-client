[run]
branch=True
source=idr_client
omit=idr_client/configs/*, idr_client/tests/*, idr_client/data/*


[report]
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no branch
    pragma: nocover
    pragma: no cover

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain about abstract methods, they aren't run:
    @(abc\.)?abstractmethod
show_missing=True


[html]
directory=coverage

